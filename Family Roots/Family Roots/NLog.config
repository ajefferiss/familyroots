<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <targets>
        <target name="logfile" xsi:type="File" fileName="${specialfolder:folder=ApplicationData}/FamilyRoots/logs/familyroots.log" 
				archiveFileName="${specialfolder:folder=ApplicationData}/FamilyRoots/logs/familyroots-${shortdate}.log" 
				maxArchiveFiles="5" 
				archiveEvery="Day" />
		<target name="logconsole" xsi:type="Console" />
    </targets>

    <rules>
        <logger name="*" minlevel="Info" writeTo="logfile" />
        <!--
        <logger name="*" minlevel="Info" writeTo="logconsole" />
        <logger name="*" minlevel="Debug" writeTo="logfile" />
        -->
    </rules>
</nlog>